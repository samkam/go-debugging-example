{
    "version": "0.2.0",
    "configurations": [
        {
                "name": "1: launch local example",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceFolder}",
                "showLog": true,
                "trace": "log",
                "args": ["arbitrary_value"],
                "env": {"ENVIRONMENTAL_VARIABLE":"set"}
        },
        {
                "name": "2: launch local test",
                "type": "go",
                "request": "launch",
                "mode": "test",
                "program": "${workspaceFolder}/some_package",
                "showLog": true,
                "trace": "log"
        },
        {
                "name": "3: debug docker container",
                "type": "go",
                "request": "attach",
                "mode": "remote",
                "remotePath": "/go/src/github.com/getbread/debug-examples/ex1",
                "port": 40000,
                "host": "127.0.0.1",
                "cwd": "${workspaceFolder}",
                "showLog": true,
                "trace": "log"
        },
    ]
}