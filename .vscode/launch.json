{
    "version": "0.2.0",
    "configurations": [
        {
                "name": "1: launch local example",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceFolder}",
                "args": ["somevalue"],
                "env": {"ENVIRONMENTAL_VARIABLE":"set"}
        },
        {
                "name": "2: launch local test",
                "type": "go",
                "request": "launch",
                "mode": "test",
                "program": "${workspaceFolder}/some_package",
                "showLog": true,
                "trace": "log"
        },
        {
                "name": "3: launch against running process",
                "type": "go",
                "request": "attach",
                "mode": "local",
                "program": "${workspaceFolder}",
                "processId": "debuggable_executable"
        },
        {
                "name": "4: launch against server",
                "type": "go",
                "request": "attach",
                "mode": "remote",
                "program": "${workspaceFolder}",
                "host": "localhost",
                "port": "40000",

        }
        {
                "name": "5: debug docker container new",
                "type": "go",
                "request": "attach",
                "mode": "remote",
                "port": 40000,
                "host": "127.0.0.1",
                "cwd": "${workspaceFolder}",
                "substitutePath": [
                        {
                                "from":"${workspaceFolder}",
                                "to": "/app"
                        },
                ],
                "preLaunchTask": "run docker image",
                "stopOnEntry": "true",
                "showLog": true,
                "trace": "info",
        },
    ]
}